    if (isNaN(offerDiscount) || parseFloat(offerDiscount) < 0 || parseFloat(offerDiscount) > 99) {
      document.getElementById('offerDiscountError').innerText = "Enter a valid value";
      return false;
    }

    return true;
  }
  
  document.getElementById("createCategorySubmit").addEventListener("click", function(event) {
    if (!validateForm()) {
      event.preventDefault();
    }
  });
</script>

