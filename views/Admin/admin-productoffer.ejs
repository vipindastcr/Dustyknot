<script>
  function validateForm() {
    var offerName = document.getElementById("offerName").value;
    var offerDiscount = document.getElementById("offerDiscount").value;
    console.log(offerName,offerDiscount);
    var offerNameError = document.getElementById("offerNameError");
    var offerDiscountError = document.getElementById("offerDiscountError");

    document.getElementById('offerNameError').innerHTML = "";
    document.getElementById('offerDiscountError').innerHTML = "";

    // Validate offerName
    if (!offerName.match(/^[a-zA-Z0-9\s]+$/) || offerName.trim() == "") {
      document.getElementById('offerNameError').innerText = "offer name can only contain letters, numbers, and spaces.";
      return false;
    }

    if (offerDiscount === "") {
      document.getElementById('offerDiscountError').innerText = "Please enter a discount value.";
