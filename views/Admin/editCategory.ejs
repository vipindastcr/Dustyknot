                                    <input type="hidden" name="_id" value="<%= category._id %>">
                                    <textarea   name="name" id="catname" class="form-control" > <%= category.name %></textarea>

                                    <p id="error1" style="display: none; color: red;"></p>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Description</label>
                                    <textarea   name="description" id="catdes" class="form-control" ><%= category.description %></textarea>
